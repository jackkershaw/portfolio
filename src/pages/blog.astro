---
import Layout from '../layouts/Layout.astro';
const allPosts = await Astro.glob('../pages/blog/*.md');
---
<style>
	@import '../styles.css';
</style>

<Layout>

	<div class="space-between mx-5 mb-10 flex flex-col py-10">
		<section>
		<p class="py-4 text-2xl lg:mx-5 lg:w-1/3">Jack Kershaw | Blog</p>
	 	<ul>
		{allPosts.map((post) => <li><a href={post.url}>{post.frontmatter.title}</a></li>)}
		 </ul>
		</section>
	</div>

</Layout>
