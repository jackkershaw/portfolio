---
import { ViewTransitions } from "astro:transitions";
import Header from "../components/header";
import Footer from "../components/footer";
import "../styles.css";
import { Plausible } from "astro-analytics";
---

<!doctype html>
<html lang="en">
  <head>
    <Plausible
      domain="jackkershaw.net"
      src="https://jackkershaw.net/analytics.js"
    />
    <ViewTransitions />
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="A personal portfolio website for Jack Kershaw, a developer and designer."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="favicon" href="/favicon.ico" />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <title>Jack Kershaw</title>
  </head>
  <body>
    <Header client:load />
    <main class="p-10 bg-neutral-100 text-neutral-900">
      <slot />
    </main>
    <Footer client:load />
  </body>
</html>
