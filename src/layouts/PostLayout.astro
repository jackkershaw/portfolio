---
const { frontmatter } = Astro.props;
import Layout from "../layouts/Layout.astro";

const formatDate = (date: string) => {
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return new Date(date).toLocaleDateString("en-GB", options);
};
---

<Layout>
  <div
    class="py-10 flex flex-col justify-start items-center min-h-[80vh]"
  >
    <div class="pb-10 max-w-prose">
      <h1
        class="text-2xl sm:text-3xl sm:text-4xl font-bold text-center"
      >
        {frontmatter.title}
      </h1>
      <p
        class="text-xl sm:text-base sm:text-2xl text-gray-600 text-center pt-2"
      >
        {formatDate(frontmatter.pubDate.slice(0, 10))}
      </p>
    </div>
    <div class="prose">
      <slot />
    </div>
    <a
      href="/blog"
      class="text-xl block hover:text-blue-600 pt-10 mt-10"
    >
      Back to all posts
    </a>
  </div>
</Layout>
