---
const { frontmatter } = Astro.props;
import Layout from "../layouts/Layout.astro";

const formatDate = (date) => {
  const options = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return new Date(date).toLocaleDateString("en-GB", options);
};
---

<Layout>
  <div class="mx-5 sm:mx-10 py-10 mb-10 md:w-1/3">
    <div
      class="flex
    flex-col sm:flex-row justify-between sm:items-center pb-5"
    >
      <h1 class="pt-4
text-2xl sm:text-3xl lg:text-4xl">
        {frontmatter.title}
      </h1>
      <p class="text-sm sm:text-base lg:text-lg">
        {formatDate(frontmatter.pubDate.slice(0, 10))}
      </p>
    </div>
    <div class="prose pb-5">
      <slot />
    </div>
    <div class="border-t-2 border-black pb-10 pt-4">
      <a href="/blog" class="text-xl mx-auto pb-10 mb-10"
        >Back to all posts</a
      >
    </div>
  </div>
</Layout>
