---
const { frontmatter } = Astro.props;
import Layout from "../layouts/Layout.astro";

const formatDate = (date: string) => {
  const options: Intl.DateTimeFormatOptions = {
    year: "numeric",
    month: "long",
    day: "numeric",
  };
  return new Date(date).toLocaleDateString("en-GB", options);
};
---

<Layout>
  <div class="mx-10 py-10">
    <div
      class="flex flex-col sm:flex-row justify-between items-center pb-10"
    >
      <h1
        class="text-2xl sm:text-3xl lg:text-4xl font-bold text-center sm:text-left"
      >
        {frontmatter.title}
      </h1>
      <p class="text-sm sm:text-base lg:text-lg text-gray-600">
        {formatDate(frontmatter.pubDate.slice(0, 10))}
      </p>
    </div>
    <div class="prose">
      <slot />
    </div>
    <a
      href="/blog"
      class="text-xl block hover:text-blue-600 py-5 mb-10"
    >
      Back to all posts
    </a>
  </div>
</Layout>
